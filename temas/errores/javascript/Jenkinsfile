pipeline {
    agent {
        docker {
            image 'node:18'
        }
    }

    stages {
        stage('Instalar dependencias') {
            steps {
                dir('javascript') {
                    sh 'npm install'
                }
            }
        }

        stage('Ejecutar tests') {
            steps {
                dir('javascript') {
                    sh 'npm test'
                }
            }
        }
    }
}
