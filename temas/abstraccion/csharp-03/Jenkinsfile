pipeline {
    agent any
    stages {
        stage('Restore') {
            steps {
                dir('src') {
                    sh 'dotnet restore'
                }
            }
        }
        stage('Build') {
            steps {
                dir('src') {
                    sh 'dotnet build --no-restore'
                }
            }
        }
        stage('Test') {
            steps {
                dir('tests') {
                    sh 'dotnet test --no-restore --no-build'
                }
            }
        }
    }
}
