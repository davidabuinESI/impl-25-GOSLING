pipeline {
    agent any

    stages {

        stage('Test') {
            steps {
                dir('temas/delegacion/ruby-03/test') {
                    echo 'Ejecutando tests con minitest...'
                    sh 'ruby -Ilib:test testOrquesta.rb'
                }

            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado.'
        }
        failure {
            echo 'El pipeline falló en algún punto.'
        }
    }
}
