pipeline {
    agent { label 'docker-cmake-node' } // el nombre del nodo que tenga lo que necesitas
    stages {
        stage('Build') {
            steps {
                sh '''
                    mkdir -p build
                    cd build
                    cmake ..
                    make
                '''
            }
        }
        stage('Test') {
            steps {
                sh './build/runTests'
            }
        }
    }
}
