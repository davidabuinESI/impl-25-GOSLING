pipeline {
    agent {
        docker {
            image 'maven:3.9.4-eclipse-temurin-11'
            args '-v /var/run/docker.sock:/var/run/docker.sock' // para poder usar docker dentro del contenedor (docker-in-docker)
        }
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean test package'
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    dockerImage = docker.build("anotaciones:latest")
                }
            }
        }

        // stage('Push Docker Image') {
        //     steps {
        //         withDockerRegistry([credentialsId: 'docker-hub', url: '']) {
        //             dockerImage.push('latest')
        //         }
        //     }
        // }
    }

    post {
        always {
            junit '**/target/surefire-reports/*.xml'
        }
    }
}
