pipeline {
    agent {
        docker {
            image 'maven:3.9.4-eclipse-temurin-17' // Maven + JDK17
            args '-v /root/.m2:/root/.m2'          // cache maven (opcional)
        }
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean test package'
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    dockerImage = docker.build('anotaciones:latest')
                }
            }
        }

        // Para subir imagen a Docker Hub (descomentar y configurar credenciales)
        // stage('Push Docker Image') {
        //     steps {
        //         withDockerRegistry([credentialsId: 'docker-hub', url: '']) {
        //             dockerImage.push('latest')
        //         }
        //     }
        // }
    }

    post {
        always {
            junit '**/target/surefire-reports/*.xml'
        }
    }
}
