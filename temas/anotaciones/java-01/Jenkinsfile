pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            agent {
                docker { 
                    image 'maven:3.9.4-openjdk-17' 
                    args '-v $HOME/.m2:/root/.m2'  // opcional, cachear dependencias Maven
                }
            }
            steps {
                sh 'mvn clean test package'
            }
        }
        stage('Run Application') {
            steps {
                sh 'java -jar target/anotaciones-1.0-SNAPSHOT.jar'
            }
        }
    }

    post {
        always {
            junit '**/target/surefire-reports/*.xml'
        }
    }
}
