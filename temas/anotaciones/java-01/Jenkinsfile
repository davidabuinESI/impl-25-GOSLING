pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            agent {
                docker { 
                    image 'maven:3.9.4-openjdk-17' 
                    args '-v $HOME/.m2:/root/.m2'  // opcional, cachear dependencias Maven
                }
            }
            steps {
                sh 'mvn clean test package'
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t anotaciones:latest .'
            }
        }

        // stage('Push Docker Image') {
        //     steps {
        //         withDockerRegistry([credentialsId: 'docker-hub', url: '']) {
        //             sh 'docker push anotaciones:latest'
        //         }
        //     }
        // }
    }

    post {
        always {
            junit '**/target/surefire-reports/*.xml'
        }
    }
}
