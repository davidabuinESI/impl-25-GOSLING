pipeline {
    agent any

    stages {
        stage('Clonar') {
            steps {
                checkout scm
            }
        }

        stage('Construcción') {
            steps {
                dir('temas/lambdas/ruby') {
                    script {
                        // Construimos la imagen Docker
                        sh 'docker build -t lambdas-ruby .'
                    }
                }
            }
        }

        stage('Pruebas') {
            steps {
                dir('temas/lambdas/ruby') {
                    script {
                        // Ejecutamos las pruebas dentro del contenedor
                        sh 'docker run --rm lambdas-ruby bundle exec rspec test_main.rb'
                    }
                }
            }
        }

        stage('Ejecución') {
            steps {
                dir('temas/lambdas/ruby') {
                    script {
                        // Ejecutamos el script principal dentro del contenedor
                        sh 'docker run --rm lambdas-ruby ruby main.rb'
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completado.'
        }
    }
}
