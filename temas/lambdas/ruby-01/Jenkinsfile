pipeline {
    agent any

    stages {
        stage('Clonar') {
            steps {
                checkout scm
            }
        }

        stage('Instalar dependencias') {
            steps {
                dir('temas/lambdas/ruby-01') {
                    sh 'bundle install'
                }
            }
        }

        stage('Pruebas') {
            steps {
                dir('temas/lambdas/ruby-01') {
                    sh 'ruby test_main.rb'
                }
            }
        }

        stage('Ejecutar aplicaciÃ³n') {
            steps {
                dir('temas/lambdas/ruby-01') {
                    sh 'ruby main.rb'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completado.'
        }
    }
}
