pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile'
            dir 'despliegue'
        }
    }
    stages {
        stage('Install dependencies') {
            steps {
                sh 'pip install -r despliegue/requirements.txt'
            }
        }
        stage('Run tests') {
            steps {
                sh 'pytest empresa/tests'
            }
        }
    }
}
