pipeline {
    agent any

    stages {
        stage('Construcci√≥n') {
            steps {
                sh 'docker build -t inyeccion-cpp .'
            }
        }
        stage('Pruebas') {
            steps {
                sh 'docker run --rm inyeccion-cpp'
            }
        }
    }

    post {
        always {
            echo 'Pipeline completado.'
        }
    }
}
